<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activityMonitor"
        android:background="@drawable/bg1" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tvStatus" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLevel" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/button"
            android:textAlignment="center" android:textSize="18sp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tvLevel" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLocation" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginBottom="67dp" app:layout_constraintBottom_toTopOf="@+id/tvStatus"
            android:textAlignment="center" android:textSize="18sp"/>
    <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="monospace"
            android:text="Location"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toStartOf="@+id/tvLocation" android:layout_marginBottom="43dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="47dp" android:layout_marginEnd="23dp"/>

    <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="monospace"
            android:text="Moisture Level:"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toStartOf="@+id/tvLevel"
            android:layout_marginBottom="67dp" app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="47dp" android:layout_marginEnd="23dp"/>

    <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="monospace"
            android:text="Status:"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toStartOf="@+id/tvStatus"
            android:layout_marginBottom="215dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="47dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="23dp"
    />

    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/othergreen"
            android:fontFamily="monospace"
            android:text="Record"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/button2" app:layout_constraintTop_toBottomOf="@+id/tvStatus"
            android:layout_marginBottom="34dp" app:layout_constraintBottom_toTopOf="@+id/button2"/>

    <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/othergreen"
            android:fontFamily="monospace"
            android:text="Water"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginBottom="61dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tvLocation" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="48dp" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginBottom="43dp" app:layout_constraintBottom_toTopOf="@+id/tvLevel"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center" android:textSize="18sp"/>

</android.support.constraint.ConstraintLayout>